<div class="relative">
  <div class="pb-12 pt-16 sm:pb-4 lg:pt-12">
    <div class="lg:px-8">
      <div class="lg:max-w-4xl">
        <div class="mx-auto px-4 sm:px-6 md:max-w-2xl md:px-4 lg:px-0">
          <h1 class="text-2xl font-bold text-gray-900 mb-6">Top 10 Stories</h1>
        </div>
      </div>
    </div>

    <%= turbo_frame_tag "top-stories", src: top_stories_path, loading: "lazy" do %>
      <div class="divide-y divide-gray-100 sm:mt-4 lg:mt-8 lg:border-t lg:border-gray-100">
        <% 10.times do %>
          <div class="lg:px-8 py-10">
            <div class="lg:max-w-4xl">
              <div class="mx-auto px-4 sm:px-6 md:max-w-2xl md:px-4 lg:px-0">
                <div class="animate-pulse flex space-x-4">
                  <div class="flex-1 space-y-6 py-1">
                    <div class="w-[70px]">
                      <div class="h-2 bg-gray-300"></div>
                    </div>
                    
                    <div class="h-4 bg-gray-300 w-[400px]"></div>
                    
                    <div class="space-y-3">
                      <div class="grid grid-cols-3 gap-4">
                        <div class="h-2 bg-gray-300 col-span-1 w-[100px]"></div>
                        <div class="h-2 bg-gray-300 col-span-1 w-[100px]"></div>
                        <div class="h-2 bg-gray-300 col-span-1 w-[100px]"></div>
                      </div>
                    </div>
                  </div>
                </div>
              </div>
            </div>
          </div>
        <% end %>
      </div>
    <% end %>
  </div>
</div>